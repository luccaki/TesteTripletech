@model IEnumerable<TesteTripletech.Models.PessoaAgendamento>

@{
    ViewData["Title"] = "Consultar";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="data">Mês/Ano</label>
                    <input type="month" class="form-control" name="data" value=@ViewData["data"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        Nome
                    </th>
                    <th>
                        Local
                    </th>
                    <th>
                        Data Inicio
                    </th>
                    <th>
                        Data Fim
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Local)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataFim)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

